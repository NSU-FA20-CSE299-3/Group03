<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_name_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20sp"
            style="bold"
            android:textColor="@color/black"

            />
        <ImageView
            android:id="@+id/product_image_display"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/product_name_display"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/product_price_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textAlignment="center"
            android:textSize="20sp"
            style="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_image_display"

            />

        <TextView
            android:id="@+id/product_desc_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            style="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/product_price_display"

            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>